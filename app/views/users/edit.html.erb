<% provide(:title, "Edit user") %>
<div class="row">
	<div class="span6 offset3">
    <h3>Update your profile</h3>

    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', temp: @user %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <br/><%= f.submit "Save changes", class: "btn" %>
    <% end %>

  </div>
</div>
