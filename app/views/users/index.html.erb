<% provide(:title, 'Users') %>
<h3>Listing users</h3>
<br>

<%= form_tag users_path, :method => 'get' do %>
<div class="row">
	<div class="span5">
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil, class: "btn" %> <%= link_to 'Reset', users_path, class: "label" %>
  </p>
	</div>
</div>
<% end %>

<% if @users.empty? %>
	<h2>No results</h2>
<% else %>

	<table class="table">
		<thead>
		  <tr>
		    <th></th>
		    <!-- <th style="color: lightgrey;">ID</th> -->
		    <th>Name</th>
		    <th></th>
		  </tr>
		</thead>
	
	  <tbody>
			<% @users.each do |user| %>
				<tr>
          <td style="color: lightgrey;"><%= user.id %></td>
				  <td><%= user.name %></td>
				  <td><%= user.email %></td>
				  <td style="text-align:right; min-width: 150px;"><%= link_to 'Show', user %> |
				  <%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<%= paginate @users %>
<% end %>
