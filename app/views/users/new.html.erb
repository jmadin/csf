<% provide(:title, 'Sign up') %>
<div class="row">
	<div class="span6 offset3">
    <h3>Sign up</h3>

    <%= form_for(@user) do |f| %>
    	<%= render 'shared/error_messages', temp: @user %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <br/><%= f.submit "Create account", class: "btn" %>
    <% end %>

</div>
</div>