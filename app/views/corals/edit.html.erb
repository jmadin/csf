<div class="row">
  <div class="col-md-4">

		<%= render 'form' %>


  </div>

  <div class="col-md-8">

    <h3>Current Images</h3>

    <% img = @coral.location + '_' + @coral.exposure + '_' + "%03d" % @coral.image_id %>
    <% @temp_csf = @files_csf.find_all{|item| item.include? img } %>

    <% @temp_csf.each do |i| %>
      <%= link_to image_tag(image_path('csf/' + i.split('/').last), :width => 325), image_path('csf/' + i.split('/').last), :target => '_blank' %>
    <% end %>

    <h3>Outlined Images</h3>

    <% @temp_outline = @files_outline.find_all{|item| item.include? img } %>

    <% @temp_outline.each do |o| %>
      <%= link_to image_tag(image_path('csf_outlines/' + o.split('/').last), :width => 325), image_path('csf_outlines/' + o.split('/').last), :target => '_blank' %>
    <% end %>

  </div>
</div>

